{
  "name": "volabarato_backend",
  "version": "1.0.0",
  "description": "Backend API para VolaBarato",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon",
    "dev:ts": "ts-node src/index.ts",
    "seed:user": "ts-node scripts/seedUser.ts",
    "change:admin:password": "ts-node scripts/changeAdminPassword.ts",
    "convert:excel:clean": "node -e \"const fs = require('fs'); const files = ['scripts/convertExcelToJson.js', 'scripts/convertExcelToJson.d.ts']; files.forEach(f => { try { fs.unlinkSync(f); } catch(e) {} });\"",
    "convert:excel:compile": "tsc scripts/convertExcelToJson.ts --outDir scripts --module commonjs --target es2020 --esModuleInterop --skipLibCheck --resolveJsonModule --moduleResolution node",
    "convert:excel:fix": "node scripts/fixConvertExcel.js",
    "convert:excel": "npm run convert:excel:clean && npm run convert:excel:compile && npm run convert:excel:fix && node scripts/convertExcelToJson.js",
    "load:paquetes": "ts-node scripts/loadPaquetesFromFile.ts",
    "remove:test": "node scripts/removeTestPaquetes.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "api",
    "backend",
    "volabarato"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/nodemailer": "^7.0.4",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.2",
    "morgan": "^1.10.1",
    "nodemailer": "^7.0.10",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/joi": "^17.2.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.5.2",
    "@types/xlsx": "^0.0.35",
    "nodemon": "^3.1.10",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2",
    "xlsx": "^0.18.5"
  }
}
