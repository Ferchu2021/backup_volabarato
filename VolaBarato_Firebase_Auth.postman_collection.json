{
	"info": {
		"_postman_id": "firebase-auth-volabarato",
		"name": "VolaBarato - Firebase Authentication",
		"description": "Colección para probar la integración de Firebase Authentication en VolaBarato",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. Verificar Estado de Firebase",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/firebase/status",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"firebase",
						"status"
					]
				},
				"description": "Verifica que Firebase Admin esté configurado correctamente en el backend"
			},
			"response": []
		},
		{
			"name": "2. Obtener Token de Firebase",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 200) {",
							"    var jsonData = pm.response.json();",
							"    if (jsonData.idToken) {",
							"        pm.collectionVariables.set(\"firebase_token\", jsonData.idToken);",
							"        console.log(\"Token guardado en variable: firebase_token\");",
							"    }",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"email\": \"test@volabarato.com\",\n  \"password\": \"12345678\",\n  \"returnSecureToken\": true\n}"
				},
				"url": {
					"raw": "https://identitytoolkit.googleapis.com/v1/accounts:signInWithPassword?key={{firebase_api_key}}",
					"protocol": "https",
					"host": [
						"identitytoolkit",
						"googleapis",
						"com"
					],
					"path": [
						"v1",
						"accounts:signInWithPassword"
					],
					"query": [
						{
							"key": "key",
							"value": "{{firebase_api_key}}"
						}
					]
				},
				"description": "Obtiene un token de Firebase usando email y contraseña. El token se guarda automáticamente en la variable 'firebase_token'."
			},
			"response": []
		},
		{
			"name": "3. Obtener Perfil con Firebase Token",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{firebase_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/firebase/profile",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"firebase",
						"profile"
					]
				},
				"description": "Obtiene el perfil del usuario autenticado usando el token de Firebase. Requiere que hayas ejecutado primero '2. Obtener Token de Firebase'."
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "https://backup-volabarato-1.onrender.com",
			"type": "string"
		},
		{
			"key": "firebase_api_key",
			"value": "AIzaSyD9rzm1vj6tLXbcEJqJ3TIvG1ZbNoPaH2A",
			"type": "string"
		},
		{
			"key": "firebase_token",
			"value": "",
			"type": "string"
		}
	]
}

